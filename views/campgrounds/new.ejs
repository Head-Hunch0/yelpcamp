<% layout('layouts/boilerplate') %>
<div class="row">
    <h3 class="text-center">New Campground</h3>
    <div class="col-md-6 offset-md-3">
    <form action="/campgrounds" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label"style="color: white;">Campground Name</label>
            <input class="form-control" type="text" id="title" name="campground[title]" placeholder="Campground Name" required>
            <div class="invalid-feedback">
                Campground Name required!
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label"style="color: white;">Campground Location</label>
            <input  class="form-control" type="text" id="location" name="campground[location]" placeholder="Campground Location" required>
            <div class="invalid-feedback">
                Campground Location required!
            </div>
        </div>
        <div class="mb-3">
        <label for="price" class="form-label"style="color: white;">Price per night</label>
        <div class="input-group">
            <span class="input-group-text">KSh</span>
            <input type="text" class="form-control" id="price" placeholder="0" name="campground[price]" required >
            <div class="invalid-feedback">
                Price required!
            </div>
        </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label"style="color: white;">Add Image</label>
            <input class="form-control" type="file" id="image" name="image" multiple>
            <div class="invalid-feedback">
                Campground Image required!
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"style="color: white;">Campground Description</label>
            <textarea class="form-control" type="text" id="description" name="campground[description]" placeholder="Campground Description" required></textarea>
            <div class="invalid-feedback">
                Campground Location required!
            </div>
        </div>

        <button class="btn btn-success">Add Campground</button>
    </form>
    <a href="/campgrounds" class="btn btn-primary"><img src="/images/campsite (1).png" class="mx-3" alt="" width="30" height="24">All Campgrounds</a>

    </div>
</div>    


