<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>?_method=put " method="post" class="form-control needs-validation" novalidate enctype="multipart/form-data" style="background-color: inherit;border: inherit;">
                <div class="mb-3">
                    <label for="title" class="form-label"style="color: white;">Campground Name</label>
                    <input class="form-control" type="text" id="title" value="<%= campground.title %>" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label"style="color: white;">Campground Location</label>
                    <input class="form-control" type="text" id="location" value="<%= campground.location %>" name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label"style="color: white;">Price per night</label>
                    <div class="input-group">
                        <span class="input-group-text">KSh</span>
                        <input type="text" class="form-control" id="price" placeholder="0" value="<%= campground.price %>"" name="campground[price]" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label"style="color: white;">Add Images</label>
                    <input class="form-control" type="file" id="image" value="<%= campground.images %>" name="image" multiple>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label"style="color: white;">Campground Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campground.description%></textarea>
                </div>
                <p>Delete Images</p>
                <div class="mb-3">
                    <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% campground.images.forEach(function(img,i){ %>
                        <div class="col">
                            <div class="card">
                                <img class="card-img" src="<%=img.thumbnail %>" alt="">
                                <div class="form-check-inline card-img-overlay text-end pt-1 pe-2">
                                    <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                    <label for="image<%=i%>"></label>
                            </div>
                            </div>
                        </div>
                        
                    <% }) %>  
                    </div>
                </div>
                <button class="btn btn-success">Update Campground</button>
            </form>
                <a href="/campgrounds" class="btn btn-primary m-2"><img src="/images/campsite (1).png" class="mx-3" alt="" width="30" height="24">Back to Campgrounds</a>

        </div>
    </div>